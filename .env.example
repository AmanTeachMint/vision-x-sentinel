# Vision X Sentinel Environment Variables
# Copy this file to backend/.env and update values as needed

# Flask Server Configuration
FLASK_PORT=5000

# CORS Configuration
# Frontend URL - update if your frontend runs on a different port
CORS_ORIGIN=http://localhost:5173

# MongoDB Configuration
# Default: local MongoDB instance
MONGO_URI=mongodb://localhost:27017/
MONGO_DB_NAME=vision_x_sentinel

# For remote MongoDB, use:
# MONGO_URI=mongodb://username:password@host:port/
# MONGO_DB_NAME=vision_x_sentinel

# SMTP (real email delivery)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_gmail@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=visionx@school.org
